% -*- erlang -*-
{cover_enabled, true}.
{erl_opts, [debug_info, warnings_as_errors]}.
{edoc_opts, [{dir, "doc"}]}.
{eunit_opts, [{report,{eunit_surefire,[{dir,"."}]}}]}.

{deps,
  [
   {otters, "~>0.1.0"}
  ]}.

{profiles,
 [{eqc,
   [{plugins, [rebar_eqc]}]}]}.

{xref_checks,[undefined_function_calls,undefined_functions,locals_not_used,
              deprecated_function_calls, deprecated_functions]}.
